<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cutom_layout"
    tools:context=".EditMovieTempActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/ratingBarTemp"
            app:layout_constraintTop_toTopOf="@+id/ratingBarTemp">

            <EditText
                android:id="@+id/editTextMovieNameTemp"
                android:layout_width="245dp"
                android:layout_height="53dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:autofillHints=""
                android:background="@drawable/cutom_edittesxt"
                android:ems="10"
                android:fontFamily="@font/artifika"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="#FDFCFC"
                android:textColorHint="#4D5656"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextYearTemp"
                android:layout_width="245dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:autofillHints=""
                android:background="@drawable/cutom_edittesxt"
                android:ems="10"
                android:fontFamily="@font/artifika"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="#FDFCFC"
                android:textColorHint="#4D5656"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/editTextMovieNameTemp" />

            <EditText
                android:id="@+id/editTeaxtListOfNamesTemp"
                android:layout_width="245dp"
                android:layout_height="62dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:autofillHints=""
                android:background="@drawable/cutom_edittesxt"
                android:ems="10"
                android:fontFamily="@font/artifika"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="#FDFCFC"
                android:textColorHint="#4D5656"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/editTextDirectorNameTemp" />

            <EditText
                android:id="@+id/editTextReviewTemp"
                android:layout_width="245dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:autofillHints=""
                android:background="@drawable/cutom_edittesxt"
                android:ems="10"
                android:fontFamily="@font/artifika"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="#FDFCFC"
                android:textColorHint="#4D5656"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.444"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarTemp" />

            <Button
                android:id="@+id/submitRegisterBtnTemp"
                android:layout_width="258dp"
                android:layout_height="56dp"
                android:layout_marginTop="596dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/logobtn"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="#121111"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:backgroundTint="#100F0F"
                app:backgroundTintMode="add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.411"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.238" />

            <RatingBar
                android:id="@+id/ratingBarTemp"

                android:layout_width="337dp"
                android:layout_height="40dp"
                android:layout_marginStart="39dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="68dp"
                android:layout_marginRight="68dp"
                android:numStars="10"
                android:progressDrawable="@drawable/ic_custom_star"
                android:stepSize="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.272"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTeaxtListOfNamesTemp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center|left"
                android:text="@string/movie_name"
                android:textColor="#FBFBFB"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center|left"
                android:text="@string/movie_year2"
                android:textColor="#FBFBFB"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/editTextDirectorNameTemp"
                android:layout_width="245dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:autofillHints=""
                android:background="@drawable/cutom_edittesxt"
                android:ems="10"
                android:fontFamily="@font/artifika"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textColor="#FDFCFC"
                android:textColorHint="#4D5656"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/editTextYearTemp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center|left"
                android:text="@string/director"
                android:textColor="#FBFBFB"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="120dp"
                android:layout_height="58dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center|left"
                android:text="@string/actors_actresses"
                android:textColor="#FBFBFB"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="48dp"
                android:gravity="center|left"
                android:text="@string/review2"
                android:textColor="#FBFBFB"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ratingBarTemp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="120dp"
                android:layout_height="52dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="57dp"
                android:gravity="center|left"
                android:text="@string/favourite"
                android:textColor="#FBFBFB"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <RadioButton
                android:id="@+id/radioButtonYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="52dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="28dp"
                android:text="@string/yes"
                android:textColor="#F8F1F1"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/editTextReviewTemp" />

            <RadioButton
                android:id="@+id/radioButtonNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="28dp"
                android:text="@string/no"
                android:textColor="#FAF7F7"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/radioButtonYes"
                app:layout_constraintTop_toBottomOf="@+id/editTextReviewTemp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>